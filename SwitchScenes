        SceneManager.LoadScene("Test1.13");  
    }  

    public void LoadMenu()  
    {  
        ResetCorrectCount();  
        SceneManager.LoadScene("Menu");  
    }  

    private void ResetCorrectCount()  
    {  
        PlayerPrefs.SetInt("CorrectCount", 0);   
        PlayerPrefs.Save();   
        Debug.Log("Лічильник правильних натискань скинуто на нуль.");   
    } 
}
