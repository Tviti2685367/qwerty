using UnityEngine;  
using UnityEngine.SceneManagement;  

public class SwitchScenes : MonoBehaviour  
{  
    public void LoadTest1_1()  
    {  
        ResetCorrectCount();  
        SceneManager.LoadScene("Test1.1");  
    }  

    public void LoadTest1_2()  
    {  
        ResetCorrectCount();  
        SceneManager.LoadScene("Test1.2");  
    }  

    public void LoadTest1_3()  
    {  
        ResetCorrectCount();  
        SceneManager.LoadScene("Test1.3");  
    }  

    public void LoadTest1_4()  
    {  
        ResetCorrectCount();  
        SceneManager.LoadScene("Test1.4");  
    }  

    public void LoadTest1_5()  
    {  
        ResetCorrectCount();  
        SceneManager.LoadScene("Test1.5");  
    }  

    public void LoadTest1_6()  
    {  
        ResetCorrectCount();  
        SceneManager.LoadScene("Test1.6");  
    }  

    public void LoadTest1_7()  
    {  
        ResetCorrectCount();  
        SceneManager.LoadScene("Test1.7");  
    }  

    public void LoadTest1_8()  
    {  
